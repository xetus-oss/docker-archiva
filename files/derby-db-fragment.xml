  <New id="users" class="org.eclipse.jetty.plus.jndi.Resource">
    <Arg>jdbc/users</Arg>
    <Arg>
      <New class="com.zaxxer.hikari.HikariDataSource">
        <Set name="driverClassName">org.apache.derby.jdbc.EmbeddedDriver</Set>
        <Set name="jdbcUrl">jdbc:derby:<SystemProperty name="appserver.base"/>/data/databases/users;create=true</Set>
        <Set name="username">sa</Set>
        <Set name="maximumPoolSize">20</Set>
        <Set name="minimumIdle">5</Set>
      </New>
    </Arg>
  </New>